<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Crete a New Listing</h3>
    <form method="POST" action="/listings">
        <div class="row"></div>
        <div class="mb-3"> 
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="enter a catchy title" type="text" class="form-control"/>
    </div>
    <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[desccription]" placeholder="enter description" class="form-control"></textarea>
        
    </div>
    <div class="mb-3">
        <lable for="image" class="form-label">Image Link</lable>
        <input name="listing[image]" placeholder="enter image/url" type="text" class="form-control"/>
        
    </div>
    <div class="row">
    <div class="mb-3 col-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" placeholder="1200" type="number" class="form-control"/>

    </div>
    <div class="mb-3 col-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[Country]" placeholder="India" type="text" class="form-control"/>
        
        </div>
    </div>
        <div>
            <lable for="location" class="form-label">location</lable>
        <input name="listing[location]" placeholder="Mumbai,Rajasthan" type="text" class="form-control"/>
        
        </div>
        <button class="btn-btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>